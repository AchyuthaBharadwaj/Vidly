@model Vidly.ViewModels.MoviesViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="page-header">
            <h1 id="tables">Movies</h1>
        </div>
        @if (Model.Movies.Count == 0)
        {
            <text>We don't have any Movies yet.</text>
        }
        else
        {
            <div class="bs-component">
                <table class="table table-striped table-hover ">
                    <thead>
                        <tr>
                            <th>Movie</th>
                            <th>Genre</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var movie in Model.Movies)
                        {
                            <tr>
                                <td><a href="@Url.Action("Details", "Movies", new { id = movie.Id })">@movie.Name</a></td>
                                <td>@movie.Genre.Name</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
